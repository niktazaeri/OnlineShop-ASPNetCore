@{
    ViewData["Title"] = "Your Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-4 fw-bold text-center">🛒 Your Shopping Cart</h2>

    <div id="cartContainer" class="row justify-content-center">
        <div class="col-md-10">
            <div id="cartContent" class="card shadow-sm border-0">
                <div class="card-body text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3 text-muted">Loading your cart...</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="alert alert-warning mt-3">
                <strong>Note:</strong> Please log in to place your order.
            </div>
            <a href="/Account/Login" class="btn btn-outline-primary btn-lg mt-3">
                Login to Order
            </a>
        }
        else
        {
            <button id="applyOrderBtn" class="btn btn-success btn-lg px-4 mt-3">
                Proceed to Checkout
            </button>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/customerScripts/cartScripts.js" type="module"></script>
}
