@{
    ViewData["Title"] = "Addresses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!-- Sidebar -->
    <div class="col-md-3">
        <partial name="_CustomerSidebar" />
    </div>

    <!-- Main content -->
    <div class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mt-4">
            <h2>My Addresses</h2>
            <button id="createAddressBtn" class="btn btn-success">+ Add New Address</button>
        </div>

        <!-- Container for the addresses table -->
        <div id="addressTableContainer" class="mt-3"></div>
    </div>
</div>

<!-- Placeholder for modals (Edit/Create) -->
<div id="modalContainer"></div>

@section Scripts {
    <script src="~/js/customerScripts/profile/addressScripts.js" type="module"></script>
}
