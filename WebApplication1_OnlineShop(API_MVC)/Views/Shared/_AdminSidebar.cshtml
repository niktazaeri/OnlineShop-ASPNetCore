@* Views/Shared/_AdminSidebar.cshtml *@
<div class="list-group shadow-sm">
    <a asp-controller="Admin" asp-action="Profile"
       class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")">
        <i class="bi bi-person-circle me-2"></i> Edit Profile
    </a>
    <a asp-controller="Admin" asp-action="ChangePassword"
       class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["action"]?.ToString() == "ChangePassword" ? "active" : "")">
        <i class="bi bi-lock me-2"></i> Change Password
    </a>
</div>
