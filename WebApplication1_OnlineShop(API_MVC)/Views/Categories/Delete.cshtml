@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Category";
}

<h2>Delete Category</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this category?</strong>
</div>

<div class="mb-3">
    <label for="categoryName" class="form-label">Category Name</label>
    <input type="text" id="categoryName" class="form-control" disabled />
</div>

<button id="btnDelete" class="btn btn-danger">Delete</button>
<a href="/categories" class="btn btn-secondary ms-2">Cancel</a>

<input type="hidden" id="categoryId" />

@section Scripts {
    <script type="module" src="~/js/adminScripts/categoryScripts/deleteCategory.js"></script>
}
